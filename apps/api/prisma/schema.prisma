generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum FormType {
  MICRO_GENERAL   // generic micro
  MICRO_GENERAL_WATER     // e.g., ‚Äúmicro water report form‚Äù
  MICRO_MIX       // your current MicroMix
  MICRO_MIX_WATER // if you truly need a distinct variant
  // CHEMISTRY_* later for HPLC/GC/pH/TOC
}


model Report {
  id            String       @id @default(cuid())
  formNumber    String       @unique
  reportNumber  String?      @unique
  prefix        String       @default("M")    // ‚ÄúM‚Äù for Micro, ‚ÄúC‚Äù for Chemistry, etc.
  status        ReportStatus @default(DRAFT)
  lockedAt      DateTime?
  createdBy     String?
  updatedBy     String?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  formType      FormType

  // üîó shared relations
  attachments   Attachment[]
  statusHistory StatusHistory[]

  // 1:1 per-form details (only one will be present based on formType)
  //micro forms
  microMix      MicroMixDetails?
  microMixWater    MicroMixWaterDetails?
  microGeneral  MicroGeneralDetails?
  microGeneralWater  MicroGeneralWaterDetails?


  // chemistryHplc HplcDetails? ‚Ä¶ etc.
}

