generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Report {
  id                       String                    @id @default(cuid())
  clientCode               String?
  formNumber               String                    @unique
  reportNumber             String?                   @unique
  prefix                   String                    @default("OM")
  status                   ReportStatus              @default(DRAFT)
  lockedAt                 DateTime?
  createdBy                String?
  updatedBy                String?
  createdAt                DateTime                  @default(now())
  updatedAt                DateTime                  @updatedAt
  formType                 FormType
  attachments              Attachment[]
  microMix                 MicroMixDetails?
  microMixWater            MicroMixWaterDetails?
  
  statusHistory            StatusHistory[]
    version                  Int                        @default(1)
}
 
model MicroMixDetails {
  reportId               String       @id
  client                 String?
  dateSent               DateTime?
  typeOfTest             String?
  sampleType             String?
  formulaNo              String?
  description            String?
  lotNo                  String?
  manufactureDate        DateTime?
  testSopNo              String?
  dateTested             DateTime?
  preliminaryResults     String?
  preliminaryResultsDate DateTime?
  dateCompleted          DateTime?
  tbc_dilution           String?
  tbc_gram               String?
  tbc_result             String?
  tbc_spec               String?
  tmy_dilution           String?
  tmy_gram               String?
  tmy_result             String?
  tmy_spec               String?
  pathogens              Json?
  comments               String?
  testedBy               String?
  testedDate             DateTime?
  reviewedBy             String?
  reviewedDate           DateTime?
  status                 ReportStatus @default(DRAFT)
  lockedAt               DateTime?
  createdBy              String?
  updatedBy              String?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  corrections            Json?
  report                 Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model MicroMixWaterDetails {
  reportId               String       @id
  client                 String?
  dateSent               DateTime?
  typeOfTest             String?
  sampleType             String?
  description            String?
  lotNo                  String?
  testSopNo              String?
  dateTested             DateTime?
  preliminaryResults     String?
  preliminaryResultsDate DateTime?
  dateCompleted          DateTime?
  tbc_dilution           String?
  tbc_gram               String?
  tbc_result             String?
  tbc_spec               String?
  tmy_dilution           String?
  tmy_gram               String?
  tmy_result             String?
  tmy_spec               String?
  pathogens              Json?
  comments               String?
  testedBy               String?
  testedDate             DateTime?
  reviewedBy             String?
  reviewedDate           DateTime?
  status                 ReportStatus @default(DRAFT)
  lockedAt               DateTime?
  createdBy              String?
  updatedBy              String?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  corrections            Json?
  idNo                   String?
  samplingDate           DateTime?
  report                 Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model Sample {
  id         String   @id @default(cuid())
  clientId   String
  sampleCode String   @unique
  sampleType String
  receivedAt DateTime @default(now())
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model User {
  id                    String           @id @default(cuid())
  email                 String           @unique
  name                  String?
  role                  UserRole         @default(CLIENT)
  passwordHash          String
  mustChangePassword    Boolean          @default(false)
  active                Boolean          @default(true)
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  inviteToken           String?          @unique
  inviteTokenExpiresAt  DateTime?
  passwordUpdatedAt     DateTime?
  passwordVersion       Int              @default(1)
  tempPasswordExpiresAt DateTime?
  userId                String?          @unique
  userIdSetAt           DateTime?
  clientCode            String?
  lastLoginAt           DateTime?        @db.Timestamp(6)
  lastActivityAt        DateTime?        @db.Timestamp(6)
  auditTrails           AuditTrail[]
  readings              BalanceReading[]
}

model ClientSequence {
  clientCode String @id
  lastNumber Int    @default(0)
}

model LabReportSequence {
  department String @id
  lastNumber Int    @default(0)
}

model BalanceReading {
  id         String   @id @default(cuid())
  instrument String
  command    String
  result     String
  userId     String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
}

model AuditTrail {
  id        String    @id @default(cuid())
  action    String
  details   String
  userId    String?
  createdAt DateTime  @default(now())
  changes   Json?
  entity    String
  entityId  String?
  ipAddress String?
  role      UserRole?
  user      User?     @relation(fields: [userId], references: [id])

  @@index([entity, entityId, createdAt])
  @@index([userId, createdAt])
}

model Attachment {
  id         String         @id @default(cuid())
  reportId   String
  kind       AttachmentKind
  filename   String
  storageKey String
  storageDriver String         @default("local") // "local" | "s3"
  storageBucket String?
  checksum   String
  pages      Int?
  source     String
  meta       Json?
  createdAt  DateTime       @default(now())
  createdBy  String?
  report     Report         @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, checksum])
  @@index([reportId])
}

model StatusHistory {
  id        String       @id @default(cuid())
  reportId  String
  from      ReportStatus
  to        ReportStatus
  reason    String?
  createdAt DateTime     @default(now())
  userId    String?
  role      UserRole?
  ipAddress String?
  report    Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId, createdAt])
}

model MachineClient {
  clientId   String    @id
  secretHash String
  scopes     String[]  @default([])
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastUsedAt DateTime?
}


