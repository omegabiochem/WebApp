enum UserRole {
  SYSTEMADMIN
  ADMIN
  FRONTDESK
  MICRO
  CHEMISTRY
  QA
  CLIENT
}

enum AttachmentKind {
  SIGNED_FORM
  RAW_SCAN
  OTHER
}






model ChemistryReport {
  id                       String                    @id @default(cuid())
  clientCode               String?
  formNumber               String                    @unique
  reportNumber             String?                   @unique
  prefix                   String                    @default("BC")
  status                   ChemistryReportStatus           @default(DRAFT)
  lockedAt                 DateTime?
  createdBy                String?
  updatedBy                String?
  createdAt                DateTime                  @default(now())
  updatedAt                DateTime                  @updatedAt
  formType                 FormType                  @default(CHEMISTRY_MIX)
  attachments              ChemistryAttachment[]

  
  chemistryMix             ChemistryMixDetails?
  statusHistory            ChemistryReportStatusHistory[]
  version                  Int                        @default(1)
}


// ---------------------------
// CHEMISTRY MIX (full form)
// ---------------------------
model ChemistryMixDetails {
  // follow same pattern as Micro: 1:1 with Report using reportId as PK
  chemistryId          String        @id
  chemistryReport            ChemistryReport        @relation(fields: [chemistryId], references: [id], onDelete: Cascade)

  // Header / sample info
  client            String?
  dateSent          DateTime?
  sampleDescription String?

  // TYPE OF TEST – multiple checkboxes
  testTypes         TestType[]    // ID, PERCENT_ASSAY, CONTENT_UNIFORMITY

  // SAMPLE COLLECTED –  multiple checkboxes
  sampleCollected   SampleCollected[]

  // LOT / MFG / FORMULA / SAMPLE SIZE / NUMBER OF ACTIVES
  lotBatchNo        String?
  manufactureDate   DateTime?
  formulaId         String?
  sampleSize        String?
  numberOfActives   String?

  // SAMPLE TYPE – multiple checkboxes across the row
  sampleTypes       SampleType[]  // BULK / FINISHED_GOOD / etc.

  stabilityNote String?
  dateReceived      DateTime?

  // “ACTIVE TO BE TESTED” rows
  actives           Json?

  // Comments + signatures block
  comments          String?
  testedBy          String?
  testedDate        DateTime?
  reviewedBy        String?
  reviewedDate      DateTime?

  // Per-form status, like MicroMixDetails
  status            ChemistryReportStatus  @default(DRAFT)
  lockedAt          DateTime?
  createdBy         String?
  updatedBy         String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  corrections       Json?
}






enum ChemistryReportStatus {
  DRAFT
  SUBMITTED_BY_CLIENT
  CLIENT_NEEDS_CORRECTION
  UNDER_CLIENT_CORRECTION
  RESUBMISSION_BY_CLIENT
  UNDER_RESUBMISSION_TESTING_REVIEW
  RECEIVED_BY_FRONTDESK
  FRONTDESK_ON_HOLD
  FRONTDESK_NEEDS_CORRECTION
  UNDER_CLIENT_REVIEW
  UNDER_TESTING_REVIEW 
  TESTING_ON_HOLD
  TESTING_NEEDS_CORRECTION
  RESUBMISSION_BY_TESTING
  UNDER_QA_REVIEW
  QA_NEEDS_CORRECTION
  UNDER_RESUBMISSION_QA_REVIEW
  UNDER_ADMIN_REVIEW
  ADMIN_NEEDS_CORRECTION
  ADMIN_REJECTED
  UNDER_RESUBMISSION_ADMIN_REVIEW
  APPROVED
  LOCKED
}

model ChemistryReportStatusHistory {
  id           String           @id @default(cuid())
  chemistryId  String
  from         ChemistryReportStatus
  to           ChemistryReportStatus
  reason       String?
  createdAt    DateTime         @default(now())
  userId       String?
  role         UserRole?
  ipAddress    String?

  report    ChemistryReport  @relation(fields: [chemistryId], references: [id], onDelete: Cascade)

  @@index([chemistryId, createdAt])
}


model ChemistryAttachment {
  id         String          @id @default(cuid())
  chemistryId   String
  filename   String
  kind       AttachmentKind
  storageKey String
  storageDriver String          @default("local")
  storageBucket String?
  checksum   String
  pages      Int?
  source     String
  meta       Json?
  createdAt  DateTime        @default(now())
  createdBy  String?

  report     ChemistryReport @relation(fields: [chemistryId], references: [id], onDelete: Cascade)

  @@unique([chemistryId, checksum])
  @@index([chemistryId])
}


enum TestType {
  ID
  PERCENT_ASSAY
  CONTENT_UNIFORMITY
}

enum SampleCollected {
  TOP_BEG
  MID
  BOTTOM_END
}

enum SampleType {
  BULK
  FINISHED_GOOD
  RAW_MATERIAL
  PROCESS_VALIDATION
  CLEANING_VALIDATION
  COMPOSITE
  DI_WATER_SAMPLE
  STABILITY
}







model MessageThread {
  id          String   @id @default(cuid())

  // CRITICAL: isolates clients
  clientCode  String

  // Optional context binding
  reportId    String?
  chemistryId String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  messages    Message[]

  reads       MessageThreadRead[]

  @@index([clientCode])
  @@index([reportId])
  @@index([chemistryId])
}

model Message {
  id          String    @id @default(cuid())

  threadId    String
  senderId    String
  senderRole  UserRole
  senderName  String?

  body        String

  // Role mentions: ["QA", "MICRO"]
  mentions    UserRole[] @default([])

  // Attachments / linked reports
  attachments Json?

  createdAt   DateTime  @default(now())
  readAt      DateTime?

  thread      MessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId, createdAt])
}


model MessageThreadRead {
  id         String   @id @default(cuid())
  threadId   String
  userId     String
  lastReadAt DateTime @default(now())

  thread     MessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@unique([threadId, userId])
  @@index([userId])
  @@index([threadId])
}










