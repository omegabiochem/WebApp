generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Report {
  id            String                @id @default(cuid())
  formNumber    String                @unique
  reportNumber  String?               @unique
  prefix        String                @default("OM")
  status        ReportStatus          @default(DRAFT)
  lockedAt      DateTime?
  createdBy     String?
  updatedBy     String?
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  formType      FormType
  clientCode    String?
  version       Int                   @default(1)
  attachments   Attachment[]
  microMix      MicroMixDetails?
  microMixWater MicroMixWaterDetails?
  statusHistory StatusHistory[]
}

model MicroMixDetails {
  reportId               String       @id
  client                 String?
  dateSent               DateTime?
  typeOfTest             String?
  sampleType             String?
  formulaNo              String?
  description            String?
  lotNo                  String?
  manufactureDate        DateTime?
  testSopNo              String?
  dateTested             DateTime?
  preliminaryResults     String?
  preliminaryResultsDate DateTime?
  dateCompleted          DateTime?
  tbc_dilution           String?
  tbc_gram               String?
  tbc_result             String?
  tbc_spec               String?
  tmy_dilution           String?
  tmy_gram               String?
  tmy_result             String?
  tmy_spec               String?
  pathogens              Json?
  comments               String?
  testedBy               String?
  testedDate             DateTime?
  reviewedBy             String?
  reviewedDate           DateTime?
  status                 ReportStatus @default(DRAFT)
  lockedAt               DateTime?
  createdBy              String?
  updatedBy              String?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  corrections            Json?
  report                 Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model MicroMixWaterDetails {
  reportId               String       @id
  client                 String?
  dateSent               DateTime?
  typeOfTest             String?
  sampleType             String?
  description            String?
  lotNo                  String?
  testSopNo              String?
  dateTested             DateTime?
  preliminaryResults     String?
  preliminaryResultsDate DateTime?
  dateCompleted          DateTime?
  tbc_dilution           String?
  tbc_gram               String?
  tbc_result             String?
  tbc_spec               String?
  tmy_dilution           String?
  tmy_gram               String?
  tmy_result             String?
  tmy_spec               String?
  pathogens              Json?
  comments               String?
  testedBy               String?
  testedDate             DateTime?
  reviewedBy             String?
  reviewedDate           DateTime?
  status                 ReportStatus @default(DRAFT)
  lockedAt               DateTime?
  createdBy              String?
  updatedBy              String?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  corrections            Json?
  idNo                   String?
  samplingDate           DateTime?
  report                 Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)
}

model Sample {
  id         String   @id @default(cuid())
  clientId   String
  sampleCode String   @unique
  sampleType String
  receivedAt DateTime @default(now())
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum TwoFactorMethod {
  EMAIL
  SMS
}

model User {
  id                 String   @id @default(cuid())
  email              String
  name               String?
  role               UserRole @default(CLIENT)
  passwordHash       String
  mustChangePassword Boolean  @default(false)

  // âœ… add these
  failedLoginCount  Int       @default(0)
  lockedUntil       DateTime?
  lastFailedLoginAt DateTime?

  phoneNumber      String? // for non-client roles (SMS)
  twoFactorEnabled Boolean          @default(true)
  twoFactorMethod  TwoFactorMethod?

  // OTP challenge state (minimal)
  twoFactorCodeHash  String?
  twoFactorExpiresAt DateTime?
  twoFactorAttempts  Int       @default(0)

  active                    Boolean          @default(true)
  createdAt                 DateTime         @default(now())
  updatedAt                 DateTime         @updatedAt
  inviteToken               String?          @unique
  inviteTokenExpiresAt      DateTime?
  passwordUpdatedAt         DateTime?
  passwordVersion           Int              @default(1)
  tempPasswordExpiresAt     DateTime?
  userId                    String?          @unique
  userIdSetAt               DateTime?
  clientCode                String?
  lastActivityAt            DateTime?        @db.Timestamp(6)
  lastLoginAt               DateTime?        @db.Timestamp(6)
  emailNotificationsEnabled Boolean          @default(true)
  auditTrails               AuditTrail[]
  readings                  BalanceReading[]

  // Support Tickets (relations)
  supportTicketsCreated  SupportTicket[] @relation("SupportTicketCreatedBy")
  supportTicketsAssigned SupportTicket[] @relation("SupportTicketAssignedTo")


  refreshTokenHash   String?   // bcrypt hash of refresh token
  refreshTokenExpAt  DateTime? // expiry timestamp
  refreshTokenRotatedAt DateTime? // optional: last rotation time (audit/debug)

  resultsLastSeenAt  DateTime?  @db.Timestamp(6)

  @@index([clientCode, role])
}

model ClientSequence {
  clientCode String @id
  lastNumber Int    @default(0)
}

model LabReportSequence {
  department String @id
  lastNumber Int    @default(0)
}

model BalanceReading {
  id         String   @id @default(cuid())
  instrument String
  command    String
  result     String
  userId     String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
}

model AuditTrail {
  id        String    @id @default(cuid())
  action    String
  details   String
  userId    String?
  createdAt DateTime  @default(now())
  changes   Json?
  entity    String
  entityId  String?
  ipAddress String?
  role      UserRole?
  user      User?     @relation(fields: [userId], references: [id])

  @@index([entity, entityId, createdAt])
  @@index([userId, createdAt])
}

model Attachment {
  id            String         @id @default(cuid())
  reportId      String
  kind          AttachmentKind
  filename      String
  storageKey    String
  checksum      String
  pages         Int?
  source        String
  meta          Json?
  createdAt     DateTime       @default(now())
  createdBy     String?
  storageBucket String?
  storageDriver String         @default("local")
  report        Report         @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, checksum])
  @@index([reportId])
}

model StatusHistory {
  id        String       @id @default(cuid())
  reportId  String
  from      ReportStatus
  to        ReportStatus
  reason    String?
  createdAt DateTime     @default(now())
  userId    String?
  role      UserRole?
  ipAddress String?
  report    Report       @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId, createdAt])
}

model MachineClient {
  clientId   String    @id
  secretHash String
  scopes     String[]  @default([])
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastUsedAt DateTime?
}

model ChemistryReport {
  id            String                         @id @default(cuid())
  formNumber    String                         @unique
  reportNumber  String?                        @unique
  prefix        String                         @default("BC")
  lockedAt      DateTime?
  createdBy     String?
  updatedBy     String?
  createdAt     DateTime                       @default(now())
  updatedAt     DateTime                       @updatedAt
  formType      FormType                       @default(CHEMISTRY_MIX)
  status        ChemistryReportStatus          @default(DRAFT)
  clientCode    String?
  version       Int                            @default(1)
  attachments   ChemistryAttachment[]
  chemistryMix  ChemistryMixDetails?
  statusHistory ChemistryReportStatusHistory[]
}

model ChemistryMixDetails {
  client            String?
  dateSent          DateTime?
  sampleDescription String?
  sampleCollected   SampleCollected[]
  comments          String?
  corrections       Json?
  createdAt         DateTime              @default(now())
  createdBy         String?
  formulaId         String?
  lockedAt          DateTime?
  lotBatchNo        String?
  manufactureDate   DateTime?
  numberOfActives   String?
  reviewedBy        String?
  reviewedDate      DateTime?
  sampleSize        String?
  sampleTypes       SampleType[]
  testTypes         TestType[]
  testedBy          String?
  testedDate        DateTime?
  updatedAt         DateTime              @updatedAt
  updatedBy         String?
  chemistryId       String                @id
  actives           Json?
  status            ChemistryReportStatus @default(DRAFT)
  dateReceived      DateTime?
  stabilityNote     String?
  chemistryReport   ChemistryReport       @relation(fields: [chemistryId], references: [id], onDelete: Cascade)
}

model ChemistryReportStatusHistory {
  id          String                @id @default(cuid())
  chemistryId String
  from        ChemistryReportStatus
  to          ChemistryReportStatus
  reason      String?
  createdAt   DateTime              @default(now())
  userId      String?
  role        UserRole?
  ipAddress   String?
  report      ChemistryReport       @relation(fields: [chemistryId], references: [id], onDelete: Cascade)

  @@index([chemistryId, createdAt])
}

model ChemistryAttachment {
  id            String          @id @default(cuid())
  chemistryId   String
  filename      String
  storageKey    String
  checksum      String
  pages         Int?
  source        String
  meta          Json?
  createdAt     DateTime        @default(now())
  createdBy     String?
  kind          AttachmentKind
  storageBucket String?
  storageDriver String          @default("local")
  report        ChemistryReport @relation(fields: [chemistryId], references: [id], onDelete: Cascade)

  @@unique([chemistryId, checksum])
  @@index([chemistryId])
}

model MessageThread {
  id          String              @id @default(cuid())
  clientCode  String
  reportId    String?
  chemistryId String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  messages    Message[]
  reads       MessageThreadRead[]

  @@index([clientCode])
  @@index([reportId])
  @@index([chemistryId])
}

model Message {
  id          String        @id @default(cuid())
  threadId    String
  senderId    String
  senderRole  UserRole
  senderName  String?
  body        String
  mentions    UserRole[]    @default([])
  attachments Json?
  createdAt   DateTime      @default(now())
  readAt      DateTime?
  thread      MessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId, createdAt])
}

model MessageThreadRead {
  id         String        @id @default(cuid())
  threadId   String
  userId     String
  lastReadAt DateTime      @default(now())
  thread     MessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@unique([threadId, userId])
  @@index([userId])
  @@index([threadId])
}

model ClientNotificationConfig {
  clientCode String                    @id
  mode       ClientNotifyMode          @default(USERS_PLUS_CUSTOM)
  createdAt  DateTime                  @default(now())
  updatedAt  DateTime                  @updatedAt
  emails     ClientNotificationEmail[]

  @@index([mode])
}

model ClientNotificationEmail {
  id         String                   @id @default(cuid())
  clientCode String
  email      String
  label      String?
  active     Boolean                  @default(true)
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt
  config     ClientNotificationConfig @relation(fields: [clientCode], references: [clientCode], onDelete: Cascade)

  @@unique([clientCode, email])
  @@index([clientCode, active])
}

enum FormType {
  MICRO_MIX
  MICRO_MIX_WATER
  CHEMISTRY_MIX
}

